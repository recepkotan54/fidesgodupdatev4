const Discord = require('discord.js');

exports.run = (client, message, args) => {
  let reason = args.slice(1).join(' ');
  let guild = message.guild
  let terfiler = guild.channels.find('name', 'ğŸ’¬genel-sohbetğŸ’¬');
  if (!terfiler) return message.reply('`ğŸ’¬genel-sohbetğŸ’¬` KanalÄ±nÄ± BulamÄ±yorum.');
  let user = message.mentions.users.first();
  if (message.mentions.users.size < 1) return message.reply('Kimi Terfi EdeceÄŸini YazmalÄ±sÄ±n.').catch(console.error);
  if (reason.length < 1) return message.reply('Terfi Sebebini YazmalÄ±sÄ±n.');
